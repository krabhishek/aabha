{
  "name": "aabha",
  "version": "1.1.0",
  "description": "Aabha - A Context Management Framework for Context Engineering at Scale. Systematic framework for engineering enterprise scale context—digital products, offline operations, organizational processes—with TypeScript decorators. Model strategy, digital journeys (APIs, mobile apps), offline processes (branch operations, manual reviews), human collaboration, and organizational governance in a unified, type-safe system. Creates engineered, AI-comprehensible context for enterprise-scale development.",
  "author": {
    "name": "Abhishek Pathak",
    "url": "https://github.com/krabhishek"
  },
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "examples",
    "README.md",
    "LICENSE",
    "ARCHITECTURE.md",
    "CONTRIBUTING.md",
    "CHANGELOG.md",
    "!**/*.tsbuildinfo"
  ],
  "keywords": [
    "context-engineering",
    "context-management",
    "enterprise-architecture",
    "business-process-modeling",
    "strategy",
    "journey-mapping",
    "digital-transformation",
    "offline-workflows",
    "manual-processes",
    "collaboration",
    "compliance",
    "okr",
    "metrics",
    "typescript",
    "decorators",
    "compile-time",
    "zero-runtime",
    "type-safety",
    "ai-assisted-development",
    "enterprise-context"
  ],
  "scripts": {
    "build": "vite build",
    "clean": "rm -rf dist dist-test",
    "typecheck": "tsc --noEmit",
    "typecheck:test": "tsc -p tsconfig.spec.json --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "vite build --mode production"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@eslint/js": "^9.38.0",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.12",
    "vite-plugin-dts": "~4.5.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/krabhishek/aabha"
  },
  "homepage": "https://github.com/krabhishek/aabha/tree/main/docs",
  "bugs": {
    "url": "https://github.com/krabhishek/aabha/issues"
  }
}
